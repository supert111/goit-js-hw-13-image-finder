

<ul class="gallery">
  {{#each hits}}
    <li class="list"> 
      <div class="photo-card">
        <img src="{{webformatURL}}" alt="image-{{tags}}"/>

        <div class="stats">
          <p class="stats-item">
           <i class="material-icons blue">thumb_up</i>
           {{likes}}
          </p>
          <p class="stats-item">
            <i class="material-icons green">visibility</i>
            {{views}}
          </p>
          <p class="stats-item">
            <i class="material-icons red">comment</i>
           {{comments}}
          </p>
          <p class="stats-item">
           <i class="material-icons">cloud_download</i>
           {{downloads}}
          </p>
        </div>
      </div>
  </li>
  {{/each}}
</ul>

